{
    "manifest_version": 3,
    "name": "Web Lock",
    "version": "1.0.0",    
    "description": "An Extension that lock websites for certain time. helps with productivity, and developes healthy habits.",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "background": {
        "service_worker":"service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ]
}