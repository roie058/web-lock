{
    "manifest_version": 3,
    "name": "Web Lock",
    "version": "1.0.0",    
    "description": "An Extension that lock websites for certain time. helps with productivity, and developes healthy habits.",
    
    "background": {
        "service_worker":"service-worker.js",
        "type": "module"
    },
    "action": {
        "default_icon": "images/open-state/weblock-open.svg",
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ]
}